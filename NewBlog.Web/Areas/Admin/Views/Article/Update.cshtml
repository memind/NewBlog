@model ArticleUpdateDto

<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4">
        <span class="text-muted fw-light">Manage Articles /</span> Add Article
    </h4>
    <div class="row">
        <div class="col-md-12">
            <div class="card mb-4">
                <h5 class="card-header">Add Article</h5>
                <form asp-controller="Article" asp-action="Update" method="post" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly"></div>
                    <div class="card-body">
                        <input type="hidden" asp-for="Id" />
                        <div class="form-group">
                            <span asp-validation-for="CategoryId" class="text-danger"></span>
                            <label asp-for="CategoryId">Category</label>
                            <select id="categoryList" asp-for="CategoryId" asp-items="@(new SelectList(Model.Categories,"Id","Name"))"></select>
                        </div>
                        <div class="form-group">
                            <span asp-validation-for="Title" class="text-danger"></span>
                            <label asp-for="Title" class="form-label">Title</label>
                            <input asp-for="Title" type="text" class="form-control mb-3" id="defaultFormControlInput" placeholder="Article Title" aria-describedby="defaultFormControlHelp">
                        </div>
                        <div class="form-group">
                            <span asp-validation-for="Content" class="text-danger"></span>
                            <label asp-for="Content" class=" form-label">Content</label>
                            <textarea asp-for="Content" type="text" class="form-control mb-3" style="min-height:300px;" id="defaultFormControlInput" placeholder="Articles Content" aria-describedby="defaultFormControlHelp"></textarea>
                        </div>
                        <div class="row">
                            <div class="form-group col-md-6">
                                <label asp-for="Image.FileName" class="d-block form-label">Current Picture</label><br />
                                <img style="height:20em; width:20em;" class="mb-3" src="~/images/@Model.Image.FileName" alt="@Model.Title" />
                            </div>
                            <div class="form-group col-md-6">
                                <label asp-for="Photo" class=" form-label">Upload Picture</label><br />
                                <span asp-validation-for="Photo" class="text-danger"></span>
                                <input asp-for="Photo" type="file" accept="image/*" class="form-control mb-3" id="defaultFormControlInput" aria-describedby="defaultFormControlHelp" />
                            </div>
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary btn-block">Update Article</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>